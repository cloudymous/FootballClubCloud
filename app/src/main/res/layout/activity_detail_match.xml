<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.DetailMatch.DetailMatchActivity">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            tools:text="Sun, 11 Nov 2018"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <TextView
                android:id="@+id/home_team"
                tools:text="Arsenal"
                android:layout_toLeftOf="@id/vs"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/vs"/>

        <TextView
                android:id="@+id/away_team"
                tools:text="Chelsea"
                android:layout_toRightOf="@id/vs"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow>
            <TextView
                    android:id="@+id/home_score"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/goal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_score"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_redcards"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/red_card"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_redcards"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_yellowcards"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/yellow_card"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_yellowcards"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_goalkeepers"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/goalkeeper"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_goalkeepers"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_linedef"
                    tools:text="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/lineup_defense"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_linedef"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_linemid"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/lineup_midfield"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_linemid"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_lineforward"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/lineup_forward"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_lineforward"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/home_linesubs"
                    tools:text="1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:text="@string/lineup_subtitutes"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="3dip" />

            <TextView
                    android:id="@+id/away_linesubs"
                    tools:text="2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:padding="3dip" />
        </TableRow>

    </TableLayout>

</LinearLayout>

</ScrollView>